<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/farmerButton"
        android:layout_width="387dp"
        android:layout_height="265dp"
        android:background="@color/colorPrimary"
        android:onClick="verkäuferButtonClick"
        android:text="Verkäufer"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kundeButton" />

    <Button
        android:id="@+id/kundeButton"
        android:layout_width="386dp"
        android:layout_height="253dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="kundeButtonClick"
        android:text="Kunde"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/farmerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>